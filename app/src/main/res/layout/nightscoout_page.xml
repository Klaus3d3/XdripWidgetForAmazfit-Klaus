<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/SGVGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginTop="75dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:autoText="false"
        android:text="20:00"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Dateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        android:autoText="false"
        android:text="17.06"
        android:textAllCaps="false"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nightscout_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="175dp"
        android:text="Date..waiting for data" />

    <TextView
        android:id="@+id/prediction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginTop="80dp"
        android:autoText="false"
        android:text="Prediction..waiting for data"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/nightscout_sgv_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="â„—000->"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textScaleX="1"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nightscout_delta_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="+0,0mg/dl"
        android:textSize="12sp" />

    <Button
        android:id="@+id/snooze_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="100dp"
        android:width="130dp"
        android:alpha="1"
        android:autoText="false"
        android:background="@android:color/holo_orange_dark"
        android:rotationX="0"
        android:rotationY="0"
        android:singleLine="false"
        android:text="Snooze"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textIsSelectable="false"
        android:visibility="invisible" />

</RelativeLayout>
